{
  "name": "arc-view",
  "version": "0.1.0",
  "description": "Arc Raiders companion â€” events, quests, crafting",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "restart": "expo start --clear",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "typecheck": "tsc --noEmit",
    "build:web": "npx expo export --platform web",
    "electron": "npm run build:web && electron electron/main.js",
    "electron-dev": "electron electron/main.js --dev",
    "dist": "npm run build:web && electron-builder"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "^7.14.0",
    "@react-navigation/native": "^7.1.28",
    "expo": "~54.0.33",
    "expo-splash-screen": "^31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-web-browser": "^15.0.10",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.21.0",
    "tesseract.js": "^5.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@types/react": "~19.1.0",
    "babel-preset-expo": "^54.0.10",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "~5.9.2"
  },
  "private": true,
  "build": {
    "appId": "com.couloir.arcview",
    "productName": "ARC View",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/tray-icon.png",
      "assets/sounds/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "shortcutName": "ARC View"
    }
  }
}
